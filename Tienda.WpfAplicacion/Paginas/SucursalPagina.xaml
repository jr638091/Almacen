<Page x:Class="WpfAplicacion.SucursalPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAplicacion"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Height="600"
      Width="800"
      Title="SucursalPagina">

    <Grid>
        <local:TopMenu x:Name="top" Title="Pagina de Sucursal"/>
        <local:MenuControl/>
        <DataGrid HorizontalAlignment="Left" Height="488" Margin="205,63,0,0" VerticalAlignment="Top" Width="325">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Codigo}" Width="0.1*" Header="Cod" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=CantidadBuenEstado}" Width="0.2*" Header="Cant BE" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=CantidadDefectuoso}" Width="0.2*" Header="Cant Def" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=CantidadTotal}" Width="0.2*" Header="Cant Total" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=PrecioBuenEstado}" Width="0.15*" Header="$ BE" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=PrecioDefectuoso}" Width="0.15*" Header="$ Def" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Name="GP_Informacion" Header="Informacion" HorizontalAlignment="Left" Height="269" Margin="535,63,0,0" VerticalAlignment="Top" Width="255">
            <Grid>
                <Image Name="Edit_btn" HorizontalAlignment="Left" Height="26" Margin="226,-18,-9.6,0" VerticalAlignment="Top" Width="26"  MouseLeftButtonDown="Edit_btn_Click" Source="../iconos/editar.png"/>
                <Image Name="Accept_btn" HorizontalAlignment="Left" Height="26" Margin="226,-18,-9.6,0" VerticalAlignment="Top" Width="26" Visibility="Hidden" MouseLeftButtonDown="Accept_btn_click" Source="../iconos/palomita.png"/>
                <Image Name="Canel_btn" HorizontalAlignment="Left" Height="26" Margin="195,-18,0,0" VerticalAlignment="Top" Width="26" Visibility="Hidden" MouseLeftButtonDown="Cancel_btn_click" Source="../iconos/cancelar.png"/>
                <Label Content="Nombre" HorizontalAlignment="Left" Margin="21,33,0,0" VerticalAlignment="Top"/>
                <Label Content="Encargado" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
                <Label Content="Telefono" HorizontalAlignment="Left" Margin="21,95,0,0" VerticalAlignment="Top"/>
                <Label Content="Direccion" HorizontalAlignment="Left" Margin="16,126,0,0" VerticalAlignment="Top"/>
                <TextBox Name="Tienda_Nombre" HorizontalAlignment="Left" Height="18" Margin="92,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"/>
                <TextBox Name="Tienda_Encargado" HorizontalAlignment="Left" Height="18" Margin="92,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"/>
                <TextBox Name="Tienda_Telefono" HorizontalAlignment="Left" Height="18" Margin="92,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"/>
                <TextBox Name="Tienda_Direccion" HorizontalAlignment="Left" Height="18" Margin="92,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"/>

            </Grid>
        </GroupBox>
        <Button Content="Informe" Name="btn_Informe" HorizontalAlignment="Left"  Margin="605,362,0,0" VerticalAlignment="Top" Width="100" FontSize="20" Background="Aquamarine" Click="btn_Informe_Click"/>
        <Button Content="Entrada" Name="btn_entrada" HorizontalAlignment="Left"  Margin="605,415,0,0" VerticalAlignment="Top" Width="100" FontSize="20" Background="Aquamarine" Click="btn_entrada_Click"/>
        <Label Foreground="Red" HorizontalAlignment="Left" Margin="221,564,0,0" VerticalAlignment="Top"/>
        <Button Content="Deudas" HorizontalAlignment="Left" FontSize="20" Margin="605,469,0,0" VerticalAlignment="Top" Background="Aquamarine" Click="Button_Click_1" Width="100" />

    </Grid>
</Page>
