<UserControl x:Class="WpfAplicacion.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAplicacion"
             mc:Ignorable="d">
    <Grid>
        <Grid Height="45" Background="LightBlue" MouseLeftButtonDown="Grid_MouseLeftButtonDown" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <!--<Image HorizontalAlignment="Right" Height="25" Margin="0,10,10,0" VerticalAlignment="Top" Width="25" Source="../iconos/close.png" MouseLeftButtonDown="Image_MouseLeftButtonDown" Cursor="Hand"/>-->
            <Label Name="label_page_name" Content="{Binding Title}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" HorizontalAlignment="Center" Height="45" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
