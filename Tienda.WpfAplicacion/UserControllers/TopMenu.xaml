<UserControl x:Class="WpfAplicacion.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAplicacion"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="800" Background="LightBlue" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Image HorizontalAlignment="Right" Height="25" Margin="0,10,10,0" VerticalAlignment="Top" Width="25" Source="../iconos/close.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
            <Label Name="label_page_name" Content="{Binding Title}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" HorizontalAlignment="Left" Height="45" Margin="281,0,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
